@model IEnumerable<VLMS.Models.EventViewModel>

@{
    ViewData["Title"] = "Events";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Title</td>
                <td>@eventItem.Description</td>
                <td>@eventItem.Date.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
