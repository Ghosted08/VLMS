@model VLMS.Models.Course

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Course Details</h2>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Department.Name</h6>
                    <p class="card-text">Credits: @Model.Credits</p>
                    <p class="card-text">Description: @Model.Description</p>
                    <a asp-action="Edit" asp-route-id="@Model.CourseID" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
